<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/personal_details"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/blue_444"
            android:layout_marginBottom="15sp"/>


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/blue_444"
            android:layout_marginBottom="15sp"
            />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15sp"
            android:background="@color/grey"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedFNTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/f_name"
            android:layout_marginBottom="10sp"
            app:startIconDrawable="@drawable/round_person_black_18dp"
            app:boxStrokeColor="@color/blue_444"
            app:boxBackgroundColor="@color/white"
            android:textColorHint="@color/black"
            app:hintTextColor="@color/blue_444"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedLNTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/l_name"
            app:startIconDrawable="@drawable/round_person_black_18dp"
            android:layout_marginBottom="10sp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="@color/blue_444"
            android:textColorHint="@color/black"
            app:hintTextColor="@color/blue_444"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gender"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/blue_444"
            android:layout_marginBottom="1sp"
            />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:buttonTint="@color/blue_444"
                android:textSize="18sp"
                android:text="@string/female" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:buttonTint="@color/blue_444"
                android:textSize="18sp"
                android:text="@string/male" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dob"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/blue_444"
            />

        <DatePicker
            android:id="@+id/datePicker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:datePickerMode="spinner"
            android:layout_marginLeft="15sp"
            android:calendarViewShown="false"/>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/filledAddTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/round_home_black_18dp"
            android:layout_marginBottom="10sp"
            android:hint="@string/address"
            app:boxBackgroundColor="@color/white"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/filledTeleTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/round_local_phone_black_18dp"
            android:hint="@string/telephone"
            app:boxBackgroundColor="@color/white"
            android:layout_marginBottom="10sp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/textButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="jobDetails"
            android:textColor="@color/blue_444"
            android:text="@string/confirm" />

        <!--        <Button-->
<!--            android:id="@+id/button3"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:onClick="jobDetails"-->
<!--            android:text="@string/confirm" />-->

    </LinearLayout>
    </ScrollView>
